@model HelpDeskSystem.ViewModels.Users.DeleteUserRoleViewModel
@{
    ViewData["Title"] = "Delete User Role";
}
<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="card-title mb-0">Are you sure you want to delete this user Role?</h4>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteUserRole" class="d-inline">
                <input type="hidden" asp-for="RoleId" />
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
            </form>
            <a asp-action="UserRolesList" class="btn btn-secondary ml-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>