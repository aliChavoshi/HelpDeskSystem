@model HelpDeskSystem.ViewModels.CommentsDto.CreateCommentDto

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Add a New Comment</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" id="form">
                <input type="hidden" asp-for="TicketId" />
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Comment</label>
                    <textarea required rows="5" class="form-control" placeholder="Please write a new Comment" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Submit Comment</button>
            </form>

            @if (Model.CommentsOfTicket.Any())
            {
                <div class="mt-4">
                    <h5 class="mb-3">Previous Comments</h5>
                    <div class="list-group">
                        @foreach (var item in Model.CommentsOfTicket)
                        {
                            <div class="list-group-item list-group-item-action flex-column align-items-start mb-2">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 text-primary">@item.CreatedBy</h6>
                                    <small class="text-muted">@item.CreatedOn</small>
                                </div>
                                <p class="mb-1">@item.Description</p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4" role="alert">
                    No comments have been added yet.
                </div>
            }
        </div>
    </div>
</div>